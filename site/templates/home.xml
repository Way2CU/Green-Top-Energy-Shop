<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<link href='https://fonts.googleapis.com/css?family=Ubuntu|Ultra' rel='stylesheet' type='text/css'/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="../images/site-sprite.svg"/>
			<!-- Header -->
			<cms:template file="stock/header_generic.xml">
				<param name="fixed" value="fixed"/>
				<param name="logo" value="logo.svg"/>
				<param name="menu" value="parts/main_menu.xml"/>
				<param name="phone" value="phone_number"/>
				<param name="phone_sprite_icon" value="site/images/site-sprite.svg#icon-phoneicon"/>
			</cms:template>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
