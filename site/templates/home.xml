<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<link href='https://fonts.googleapis.com/css?family=Ubuntu|Ultra' rel='stylesheet' type='text/css'/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:template file="parts/header.xml"/>
			<!-- Packages Slider -->
			<section class="slider_container">
				<cms:module
					name="shop"
					action="show_item_list"
					template="parts/package_review.xml"
					/>	
			</section>

			<!-- Features -->
			<section id="features">
				<h2><cms:text constant="title_features"/></h2>

				<ul>
					<cms:module
						name="articles"
						action="show_list"
						text_id="features"
						template="stock/features_generic.xml"
						/>
				</ul>
			</section>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
