<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<link href='https://fonts.googleapis.com/css?family=Ubuntu|Ultra' rel='stylesheet' type='text/css'/>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Header -->
			<cms:template file="parts/header.xml"/>

			<!-- Packages slider -->
			<section id="packages">
				<cms:module
					name="shop"
					action="show_item_list"
					template="parts/package_slider.xml"
					/>

				<div class="controls"/>
			</section>

			<!-- Egauge -->
			<section id="egauge">
				<cms:module
					name="articles"
					action="show"
					text_id="egauge_article"
					template="parts/article.xml"
					/>
			</section>

			<!-- Video -->
			<section id="video">
				<h2><cms:text constant="title_video"/></h2>
				<img
					src="_BASEURL.'/site/images/system.jpg'"
					alt="report"
					cms:eval="src"
					/>
				<cms:module
					name="youtube"
					action="show"
					text_id="home_page_video"
					embed="1"
					width="550"
					height="366"
					theme="light"
					autohide="0"
					autoplay="0"
					show_related="0"
				/>
			</section>

			<!-- Features -->
			<cms:template file="parts/features.xml"/>

			<!-- Footer -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
