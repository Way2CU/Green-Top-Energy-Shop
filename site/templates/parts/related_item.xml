<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<div
		class="related_item"
		data-uid="$params['uid']"
		cms:eval="data-uid"
		>
		<figure>
			<img
				src="gallery::getGroupThumbnailById($params['gallery'])"
				alt="$params['name'][$language]"
				cms:eval="src,alt"
				/>
		</figure>
		<span class="title"><cms:var param="name" multilanguage="yes"/></span>
		<span class="price"><cms:var param="price"/></span>
		<span class="count"/>
		<div class="item_controls">
			<a
				href="javascript: void(0);"
				onclick="'Site.checkout_pages.increase_related_count(\'' + $params['uid'] + '\');'"
				cms:eval="onclick"
				>
				<cms:raw text="+"/>
			</a>
			<a
				href="javascript: void(0);"
				onclick="'Site.checkout_pages.decrease_related_count(\'' + $params['uid'] + '\');'"
				cms:eval="onclick"
				>
				<cms:raw text="-"/>
			</a>
		</div>
	</div>
</document>
