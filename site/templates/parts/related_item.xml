<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<div
		class="related_item"
		data-cid="$params['cid']"
		cms:eval="data-cid"
		>
		<figure>
			<img
				src="gallery::getGroupThumbnailById($params['gallery'])"
				alt="$params['name'][$language]"
				cms:eval="src,alt"
				/>
		</figure>
		<span class="title"><cms:var param="name" multilanguage="yes"/></span>
		<span class="price"><cms:var param="price"/></span>
		<span class="count"/>
		<div class="item_controls">
			<a data-amount="1"><cms:raw text="+"/></a>
			<a data-amount="-1"><cms:raw text="-"/></a>
		</div>
	</div>
</document>
